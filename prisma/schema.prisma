generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Settings {
  id              String   @id @default(cuid())
  siteName        String
  siteDescription String
  siteUrl         String
  siteLogo        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("settings")
}

model ContactInfo {
  id           String   @id @default(cuid())
  phone        String
  email        String
  address      String
  workSchedule String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("contact_info")
}

model CompanyInfo {
  id          String   @id @default(cuid())
  name        String
  legalName   String
  industry    String
  foundedYear Int
  services    String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("company_info")
}

model ProductCategory {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  image       String?
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]

  @@map("product_categories")
}

model Product {
  id               String          @id @default(cuid())
  name             String
  slug             String          @unique
  shortDescription String
  fullDescription  String
  specifications   Json?
  images           String[]
  isActive         Boolean         @default(true)
  order            Int             @default(0)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  categoryId       String
  category         ProductCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("products")
}

model Certificate {
  id          String   @id @default(cuid())
  title       String
  description String
  issueDate   DateTime
  expiryDate  DateTime
  image       String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("certificates")
}

model Review {
  id        String   @id @default(cuid())
  name      String
  position  String
  company   String
  content   String
  rating    Int      @default(5)
  date      DateTime @default(now())
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("reviews")
}

model Management {
  id               String   @id @default(cuid())
  name             String
  position         String
  phone            String
  email            String
  responsibilities String[]
  photo            String?
  order            Int      @default(0)
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("management")
}

model PageContent {
  id              String   @id @default(cuid())
  slug            String   @unique
  title           String
  content         String
  metaTitle       String?
  metaDescription String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("page_contents")
}

model HeroSection {
  id              String   @id @default(cuid())
  page            String   @unique
  title           String
  subtitle        String?
  backgroundImage String?
  ctaText         String?
  ctaLink         String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("hero_sections")
}

model Questionnaire {
  id          String                    @id @default(cuid())
  category    String
  fileUrl     String
  isActive    Boolean                   @default(true)
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
  submissions QuestionnaireSubmission[]

  @@map("questionnaires")
}

model QuestionnaireSubmission {
  id              String        @id @default(cuid())
  questionnaireId String
  clientInfo      Json
  responses       Json
  status          String        @default("new")
  submittedAt     DateTime      @default(now())
  processedAt     DateTime?
  processedBy     String?
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  questionnaire   Questionnaire @relation(fields: [questionnaireId], references: [id], onDelete: Cascade)

  @@map("questionnaire_submissions")
}

model ContactRequest {
  id          String    @id @default(cuid())
  fullName    String
  phone       String
  email       String?
  message     String?
  status      String    @default("new")
  contactedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("contact_requests")
}

model GalleryImage {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String
  category    String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  uploadedBy  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("gallery_images")
}

model User {
  id         String   @id @default(cuid())
  name       String
  surname    String
  department String
  email      String   @unique
  phone      String
  password   String
  role       UserRole
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("users")
}

model MetaTag {
  id          String   @id @default(cuid())
  page        String
  title       String?
  description String?
  keywords    String?
  ogImage     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("meta_tags")
}

enum UserRole {
  ADMIN
  MODERATOR
}
